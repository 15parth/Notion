{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "rootDir": "./",  // Set the root to the project root directory
    "outDir": "dist", // Output directory
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "incremental": true,
    "tsBuildInfoFile": "./.tsbuildinfo",
    "typeRoots": ["@types", "node_modules/@types"],
  },
  "include": [
    "src",         // Include all files inside src
    "index.ts"     // Include index.ts outside of src
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    ".tsbuildinfo"
  ]
}
