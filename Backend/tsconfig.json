{
  "compilerOptions": {
    "target": "ES2020",                           // Good for Node.js 14+
    "module": "CommonJS",                         // Required for Node.js
    "rootDir": "./src",                           // TS input directory
    "outDir": "dist",                             // Output directory
    "strict": true,                               // All strict checks
    "esModuleInterop": true,                      // Required for default imports
    "forceConsistentCasingInFileNames": true,     // Prevent casing issues
    "skipLibCheck": true,                         // Skip type checking node_modules
    "moduleResolution": "node",                   // Recommended for modern Node
    "resolveJsonModule": true,                    // If you import JSON (common)
    "incremental": true,                          // ðŸ’¡ Enables faster builds (important)
    "tsBuildInfoFile": "./.tsbuildinfo"           // Stores incremental cache
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "build", ".tsbuildinfo"]
}
